{
    "title": "Tempus",
    "rules": [
        {
            "description": "Caps Lock -> Hyper Key",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "left_shift",
                        "modifiers": ["left_command", "left_option", "left_control"]
                    }
                }
            ]
        },
        {
            "description": "Hyper + HJKL -> Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "left_arrow"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "down_arrow"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "up_arrow"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "right_arrow"
                    }
                }
            ]
        },
        {
            "description": "Hyper + YUIO -> Shift + Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "left_arrow",
                        "modifiers": ["left_shift"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "down_arrow",
                        "modifiers": ["left_shift"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "up_arrow",
                        "modifiers": ["left_shift"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "right_arrow",
                        "modifiers": ["left_shift"]
                    }
                }
            ]
        },
        {
            "description": "Hyper + NM -> Delete Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "delete_or_backspace"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "delete_forward"
                    }
                }
            ]
        },
        {
            "description": "Hyper + P -> Escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "escape"
                    }
                }
            ]
        },
        {
            "description": "Hyper + ,. -> Tab Switch",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "comma",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "tab",
                        "modifiers": ["left_control", "left_shift"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "period",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "tab",
                        "modifiers": ["left_control"]
                    }
                }
            ]
        },
        {
            "description": "Hyper + /; -> Backslash",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "slash",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "backslash"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "backslash",
                        "modifiers": ["left_shift"]
                    }
                }
            ]
        },
        {
            "description": "Hyper + '[ -> Backtick",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "grave_accent_and_tilde"
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "open_bracket",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": ["left_shift"]
                    }
                }
            ]
        },
        {
            "description": "Hyper + Arrow -> Window Control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "up_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "f",
                        "modifiers": ["fn", "left_control"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "down_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "c",
                        "modifiers": ["fn", "left_control"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "left_arrow",
                        "modifiers": ["fn", "left_control"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_option",
                                "left_control",
                                "left_shift"
                            ],
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "right_arrow",
                        "modifiers": ["fn", "left_control"]
                    }
                }
            ]
        },
        {
            "description": "Right Cmd/Opt -> IME/Caps Lock",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "f13",
                        "modifiers": ["left_command", "left_option", "left_control", "left_shift"]
                    }
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_option",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": {
                        "key_code": "caps_lock"
                    }
                }
            ]
        }
    ]
}
